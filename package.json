{
  "name": "iot-monitoring-platform",
  "description": "Real-time IoT Industrial Monitoring Dashboard",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "backend:install": "cd backend && npm install",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "start:dev": "concurrently \"npm run backend:dev\" \"npm run dev\"",
    "setup": "npm install && npm run backend:install"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.0",
    "vite": "^7.0.4"
  },
  "dependencies": {
    "lucide-vue-next": "^0.536.0",
    "socket.io-client": "^4.8.1",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  }
}
